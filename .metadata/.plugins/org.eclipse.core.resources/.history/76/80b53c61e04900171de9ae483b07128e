	public void intakePet(VirtualPet v) {
		vPets.put(v.name, v);
		
	}
	
	public void adoptPet(VirtualPet v) {
		vPets.remove(v.name, v);
		
	}	
	
	public void petCollection(VirtualPet v) {
		
		Set set = vPets.entrySet();
		Iterator itr = set.iterator();
		
		while(itr.hasNext()){
			Map.Entry entry = (Map.Entry)itr.next();
			System.out.println(entry.getKey() + " " + entry.getValue());
			System.out.println(v.name + " " + v.description + " " + v.hunger + " " + v.thirst + " " + v.boredom)
		}
		
		
	}
	
